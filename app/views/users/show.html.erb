<article id="user">
    <div>
      <% if @user.avatar.attached? %>
        <image src="<%=(url_for(@user.avatar))%>" width="80px" style="display:inline-block; border-radius: 50%;">
      <% end %>
      <h1 style="display:inline-block; margin-top: 0px; transform: translateY(-32px);"><%= @user.name %></h1>
      <h2><%= mail_to(@user.email) %></h2>
    </div>
</article>

<footer>
  <nav>
  <% if current_user?(@user)  %>
    <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
    <%= link_to 'Delete Account', @user,
                method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
  <% end %>
  </nav>
</footer>